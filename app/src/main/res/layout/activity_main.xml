<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background"
    android:scrollbars="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_main_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="86dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColorHint="@color/black"
        android:text="@string/main_heading"/>

    <EditText
        android:id="@+id/edittext_main_loaisanpham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/main_loaisanpham"
        android:inputType="textPersonName"
        android:padding="14dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edittext_main_tensanpham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:padding="14dp"
        android:hint="@string/main_tensanpham"
        android:textSize="14sp"
        android:background="@color/white"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edittext_main_soluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:padding="14dp"
        android:ems="10"
        android:hint="@string/main_soluong"
        android:textSize="14sp"
        android:background="@color/white"
        android:inputType="number" />

    <EditText
        android:id="@+id/edittext_main_ngaysanxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:padding="14dp"
        android:ems="10"
        android:hint="@string/main_nhasanxuat"
        android:textSize="14sp"
        android:background="@color/white"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edittext_main_ngaynhapkho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:padding="14dp"
        android:ems="10"
        android:hint="@string/main_ngaynhapkho"
        android:textSize="14sp"
        android:background="@color/white"
        android:inputType="date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="22dp">

        <Button
            android:id="@+id/button_main_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="46dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="41dp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:backgroundTint="@color/main_button"
            android:text="Back" />

        <Button
            android:id="@+id/button_main_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="35dp"
            android:layout_marginRight="47dp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:backgroundTint="@color/main_button"
            android:text="Confirm" />
    </LinearLayout>


</LinearLayout>